<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leyuan.coach.widget.CommonTitleLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:txtTitle="@string/select_date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/sun" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/one" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/two" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/three" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/four" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/five" />

        <TextView
            style="@style/txtWeekStyle"
            android:text="@string/six" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_month_first"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/base_theme"
                android:gravity="center"
                android:text="2017-1"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txt_month_second"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/base_theme"
                android:gravity="center"
                android:text="2017-1"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>