<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="425dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="355dp" />

        <LinearLayout
            android:id="@+id/ll_point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/layout_take_over_class"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="visible">

            <Button
                android:id="@+id/bt_refuse"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_radius_white"
                android:gravity="center"
                android:text="@string/refuse"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/bt_knowed"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_radius_red"
                android:gravity="center"
                android:text="@string/I_know"
                android:textColor="@color/white"
                android:textSize="15dp"

                />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_know_suspend"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_radius_red"
            android:gravity="center"
            android:text="@string/I_know"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone"

            />


    </LinearLayout>


</RelativeLayout>