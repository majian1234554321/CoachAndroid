<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/me_background">

        <RelativeLayout
            android:id="@+id/rel_class_warn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_class_warn"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/shape_circle_red"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_next_month_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_class_warn"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:text="@string/next_month_class"
                android:textColor="@color/base_theme"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:clickable="true"
            fresco:placeholderImage="@drawable/big_icon_head"
            fresco:roundAsCircle="true"

            />


        <LinearLayout
            android:id="@+id/layout_name_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@id/txt_level"
                android:layout_width="27dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_radius_origin"
                android:gravity="center"
                android:text="LV3"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_center_divider"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_below="@id/layout_name_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@color/white" />

        <TextView
            android:id="@+id/txt_attendance_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_name_level"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/img_center_divider"
            android:singleLine="true"
            android:text="80"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_star_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_name_level"
            android:layout_marginRight="40dp"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@id/img_center_divider"
            android:text="5.0"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout_mine_money"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            style="@style/common_img_left_style"
            android:src="@drawable/icon_money" />

        <TextView
            style="@style/Common_txt_style"
            android:text="@string/my_money" />

        <ImageView style="@style/common_divider_style" />

        <ImageView
            style="@style/common_img_right_style"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout_my_appointment"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            style="@style/common_img_left_style"
            android:src="@drawable/icon_yuyue" />

        <TextView
            style="@style/Common_txt_style"
            android:text="@string/my_appointment" />

        <ImageView style="@style/common_divider_style" />

        <ImageView
            style="@style/common_img_right_style"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout_message"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            style="@style/common_img_left_style"
            android:src="@drawable/me_icon_massage" />

        <TextView
            style="@style/Common_txt_style"
            android:text="@string/message_center" />

        <ImageView style="@style/common_divider_style" />

        <ImageView
            style="@style/common_img_right_style"
            android:src="@drawable/arrow_right" />

        <ImageView
            android:id="@+id/img_new_message"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:src="@drawable/shape_circle_red"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout_my_sign_in"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            style="@style/common_img_left_style"
            android:src="@drawable/icon_sign" />

        <TextView
            style="@style/Common_txt_style"
            android:text="@string/check_sign" />

        <ImageView style="@style/common_divider_style" />

        <ImageView
            style="@style/common_img_right_style"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            style="@style/common_img_left_style"
            android:src="@drawable/icon_set" />

        <TextView
            style="@style/Common_txt_style"
            android:text="@string/set" />

        <!--<ImageView style="@style/common_divider_style" />-->

        <ImageView
            style="@style/common_img_right_style"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>


</LinearLayout>