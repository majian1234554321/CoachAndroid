<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="191dp"
        android:background="@drawable/bg_edit_course_num">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="dianshagn"
                android:textColor="@color/c3"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txt_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2016-7-18"
                android:textColor="@color/c3"
                android:textSize="13sp" />

            <EditText
                android:inputType="number"
                android:id="@+id/edit_num"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@color/transparent"
                android:text="0"
                android:textColor="@color/red_theme"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/red_theme"

                />

            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_radius_red"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="13sp" />


        </LinearLayout>


        <ImageButton
            android:id="@+id/bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/icon_close_gray" />


    </RelativeLayout>


</FrameLayout>