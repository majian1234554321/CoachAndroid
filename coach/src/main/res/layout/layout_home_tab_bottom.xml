<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomTabLayout"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:background="@color/color_home_tab_bg"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/tabCourse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_course_img"></ImageView>

            <TextView
                style="@style/tabTextStyle"
                android:layout_below="@id/img_course"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/class_schedule"
                android:textSize="11dp"></TextView>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></View>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tabTrain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/tabContactorImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_train_tag_img" />

            <TextView
                android:id="@+id/tabContactorTextView"
                style="@style/tabTextStyle"
                android:layout_below="@id/tabContactorImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/train"
                android:textSize="11dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabMineLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <ImageView
                android:id="@+id/tabMineImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_tab_mine_img" />

            <TextView
                android:id="@+id/tabMineTextView"
                style="@style/tabTextStyle"
                android:layout_below="@id/tabMineImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/tabMine"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/img_new_message"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/shape_circle_red"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></View>
    </RelativeLayout>

</LinearLayout>